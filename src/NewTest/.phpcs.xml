<?xml version="1.0"?>
<ruleset name="Custom Coding Standard">
    <description>Coding Standard based on PSR-12</description>

    <!-- Include PSR-12 -->
    <rule ref="PSR12"/>

    <!-- Exclude patterns -->
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- Paths to check -->
    <file>src</file>
    <file>tests</file>
</ruleset>