{% extends 'base.html.twig' %}

{% block title %}Servers{% endblock %}

{% block body %}

    {{ form_start(form) }}
        <div class="container" style="margin-top: 50px">
            <div class="row" style="margin-bottom: 40px">
                <div class="col-4">
                    <div><div id="arbitrary-values-slider"></div></div>
                </div>
                <div class="col scroll" style="max-height: 80px;margin-left: 8px">
                    <div>{{ form_widget(form.ram) }}</div>
                </div>
                <div class="col">
                    <div>{{ form_widget(form.hdd) }}</div>
                </div>
                <div class="col">
                    <div>{{ form_widget(form.location) }}</div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}

    <table class="table table-striped" style="width: 80%;margin: auto">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Model</th>
                <th scope="col">Ram</th>
                <th scope="col">HDD</th>
                <th scope="col">Location</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>1</td>
                <td>2</td>
                <td>3</td>
                <td>4</td>
                <td>5</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
