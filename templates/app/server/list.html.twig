{% extends 'base.html.twig' %}

{% block title %}Servers{% endblock %}

{% block body %}

    {{ form_start(form) }}
        {{ form_widget(form.sort_by) }}
        {{ form_widget(form.sort_order) }}
        {{ form_widget(form.page) }}
        <div class="container" style="margin-top: 50px">
            <div class="row" style="margin-bottom: 40px">
                <div class="col-4">
                    <div><div id="arbitrary-values-slider"></div></div>
                    {{ form_widget(form.storage) }}
                </div>
                <div class="col scroll" style="max-height: 80px;margin-left: 8px">
                    <div>{{ form_widget(form.ram) }}</div>
                </div>
                <div class="col">
                    <div>{{ form_widget(form.hdd) }}</div>
                </div>
                <div class="col">
                    <div>{{ form_widget(form.location) }}</div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}

    <table class="table table-striped" style="width: 80%;margin: auto">
        <thead>
            <tr>
                <th scope="col" class="sort">Model</th>
                <th scope="col" class="sort">Ram</th>
                <th scope="col" class="sort">HDD</th>
                <th scope="col" class="sort">Location</th>
                <th scope="col" class="sort">Price</th>
            </tr>
        </thead>
        <tbody id="list">

        </tbody>
    </table>

    <div class="container">
        <div class="row text-center">
            <div class="col">
                <ul id="pagination" class="list-inline"></ul>
            </div>
        </div>
    </div>

{% endblock %}
